@model pokeBbyzApp.Models.PokemonSpeciesViewModel
@{
    ViewBag.Title = "Edit a pokemon";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("Edit", "Pokemon", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.ID)
    <div>
        <div class="row">
            <div class="form-group col-sm-offset-2 col-sm-8">
                @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control allow-max-width", id = "loginUsername" } })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-offset-2 col-sm-4">
                @Html.LabelFor(model => model.UploadedFrontImage)
                @Html.TextBoxFor(model => model.UploadedFrontImage, new { type = "file" })
                @Html.ValidationMessageFor(model => model.UploadedFrontImage, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-4">
                @Html.LabelFor(model => model.UploadedBackImage)
                @Html.TextBoxFor(model => model.UploadedBackImage, new { type = "file" })
                @Html.ValidationMessageFor(model => model.UploadedBackImage, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-offset-2 col-sm-4">
            <div>Type 1:</div>
            @Html.DropDownListFor(model => model.PokemonType.ID, new SelectList(Model.Types, "ID", "Name"), new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-4">
            <div>Type 2:</div>
            @Html.DropDownListFor(model => model.PokemonType1.ID, new SelectList(Model.Types, "ID", "Name"), "No type", new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-offset-5 col-sm-1">
            <button class="btn btn-success">Save</button>
        </div>
    </div>
}
